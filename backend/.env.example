# =============================================================================
# VoiceTranslate AI Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# SQLite for development, use PostgreSQL/MySQL for production
DATABASE_URL="file:./dev.db"

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# Generate secure secrets with: openssl rand -hex 64
JWT_ACCESS_SECRET=your-super-secure-access-token-secret-at-least-64-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret-at-least-64-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Encryption key for sensitive data at rest (32 bytes hex = 64 characters)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here-64chars

# bcrypt rounds for password hashing (10-12 recommended)
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_GLOBAL_MAX=1000
RATE_LIMIT_GLOBAL_WINDOW_MS=3600000

RATE_LIMIT_PER_USER_MAX=100
RATE_LIMIT_PER_USER_WINDOW_MS=60000

RATE_LIMIT_TRANSLATION_FREE_MAX=10
RATE_LIMIT_TRANSLATION_FREE_WINDOW_MS=60000

RATE_LIMIT_TRANSLATION_PREMIUM_MAX=100
RATE_LIMIT_TRANSLATION_PREMIUM_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# AI Service API Keys (Keep these secure!)
# -----------------------------------------------------------------------------
# Google Cloud Speech-to-Text
GOOGLE_CLOUD_STT_API_KEY=your-google-cloud-stt-api-key

# Google Cloud Text-to-Speech
GOOGLE_CLOUD_TTS_API_KEY=your-google-cloud-tts-api-key

# DeepL Translation API
DEEPL_API_KEY=your-deepl-api-key

# Google Translate API (backup)
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# -----------------------------------------------------------------------------
# App Store / Play Store Receipt Verification
# -----------------------------------------------------------------------------
APPLE_SHARED_SECRET=your-apple-shared-secret
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY=path-to-service-account.json

# -----------------------------------------------------------------------------
# Google OAuth Configuration
# -----------------------------------------------------------------------------
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-web-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_ANDROID_CLIENT_ID=your-google-android-client-id.apps.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your-google-ios-client-id.apps.googleusercontent.com

# -----------------------------------------------------------------------------
# Email Service (Resend)
# -----------------------------------------------------------------------------
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=VoiceTranslate <noreply@voicetranslate.ai>
APP_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable mock AI services for development (true/false)
USE_MOCK_AI_SERVICES=true

# Enable detailed request logging
ENABLE_REQUEST_LOGGING=true

# -----------------------------------------------------------------------------
# AI Punctuation (Post-STT Enhancement)
# -----------------------------------------------------------------------------
# Enable AI-powered punctuation for STT transcripts
# Adds periods, commas, question marks when Whisper doesn't
# Requires OPENROUTER_API_KEY to be set
ENABLE_AI_PUNCTUATION=false

# Model to use for punctuation (default: openai/gpt-4o-mini)
# Use a fast, cheap model for minimal latency impact
PUNCTUATION_MODEL=openai/gpt-4o-mini
